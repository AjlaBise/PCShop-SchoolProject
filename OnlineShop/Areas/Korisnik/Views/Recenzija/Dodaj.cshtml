@model OnlineShop.ViewModels.DodajRecenzijuVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Dodaj";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Snimi" method="post">
    <input asp-for="ProizvodID" hidden/>

    <div class="container pb-cmnt-container" style="margin-left:20%;">
        <div class="row">
            <div class="col-md-10 col-md-offset-5 ">
                <div class="panel panel-info">
                    <div class="panel-body">
                        <textarea asp-for="Komentar" placeholder="Napišite Vaš komentar ovdje!" class="pb-cmnt-textarea" style="width:80%;"></textarea>


                    </div>
                    <div>
                        <label>Ocjena</label>
                        <input asp-for="Ocjena" type="number" />
                    </div>
                </div>
            </div>
        </div>
        <input type="submit" value="Snimi" class="btn btn-info" />
    </div>
    
</form>
